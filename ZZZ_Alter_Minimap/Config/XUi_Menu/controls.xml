<configs>
	<append xpath="/controls">
		<minimapoption pos="0,0" visible="true" value_min="@DEF" value_max="@DEF" value_wrap="@DEF" value_increment="@DEF" values="@DEF" reverse_list="@DEF" localization_prefix="" format_string="" width="655">
			<rect pos="${pos}" width="${width}" height="32">
				<label depth="4" pos="0,0" width="350" height="30" style="hover" text="${label}" font_size="28" color="[white]" justify="right" pivot="topleft" visible="${visible}"/>
				<combobox name="${_name}" type="${type}" value_min="${value_min}" value_max="${value_max}" value_wrap="${value_wrap}" value_increment="${value_increment}" values="${values}" reverse_list="${reverse_list}" localization_prefix="${localization_prefix}" format_string="${format_string}" pos="355,0" width="${(width)}" height="32" visible="${visible}" index_markers="false"/>
			</rect>
		</minimapoption>
		<minimaptextoption pos="0,0" visible="true" width="655">
			<rect pos="${pos}" width="${width}" height="32">
				<rect pos="0,0">
					<label depth="4" pos="0,0" width="350" height="30" text="${label}" font_size="28" color="[white]" justify="right" pivot="topleft" visible="${visible}"/>
					<textfield name="${_name}" style="scroll" pos="389,0" width="${(width) - 69}" height="32" visible="${visible}"/>
				</rect>
			</rect>
		</minimaptextoption>
		<minimaphotkeyoption pos="0,0" visible="true" width="655">
			<rect pos="${pos}" width="${width}" height="32">
				<rect pos="0,0">
					<label depth="4" pos="0,0" width="350" height="30" text="Minimap Hotkey" font_size="28" color="[white]" justify="right" pivot="topleft" visible="${visible}"/>
					<textfield name="minimapHotkey" pos="389,0" width="300" height="32" visible="${visible}"/>				
					<button depth="1" name="hotkeyRemoveBtn" style="icon32px, press" width="28" height="28" pivot="center" pos="730,-15" sprite="ui_game_symbol_x" tooltip="Remove Hotkey" sound="[paging_click]" />
				</rect>
			</rect>
		</minimaphotkeyoption>
	</append>
</configs>